---
# =============================================================================
# CLOUDFLARE API CREDENTIALS
# =============================================================================
# IMPORTANT: Copy this file to config/credentials.yml and fill in your values
# DO NOT commit config/credentials.yml - it's in .gitignore
# =============================================================================

# Cloudflare API Token (REQUIRED)
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions:
#   - Zone:Read, Zone:Edit
#   - DNS:Read, DNS:Edit
#   - Page Rules:Read, Page Rules:Edit
#   - Zone WAF:Read, Zone WAF:Edit
#   - Account Settings:Read
cloudflare_api_token: "YOUR_CLOUDFLARE_API_TOKEN_HERE"

# Cloudflare Account ID (Optional, but recommended)
# Find at: https://dash.cloudflare.com/ (in Account Home)
cloudflare_account_id: "YOUR_ACCOUNT_ID_HERE"

# Default Zone ID (Optional - can be specified per-playbook)
# Find in: Zone Overview → API section → Zone ID
cloudflare_zone_id: "YOUR_DEFAULT_ZONE_ID_HERE"

# Cloudflare Email (Optional - only if using API Key instead of Token)
cloudflare_email: "your-email@example.com"

# =============================================================================
# AWX CREDENTIALS
# =============================================================================

# AWX Admin Password (will be set during deployment)
# If not specified, a random password will be generated
awx_admin_password: "SecurePasswordHere123!"

# AWX PostgreSQL Password (will be generated if not specified)
awx_postgres_password: "PostgresPasswordHere456!"

# AWX Secret Key (will be generated if not specified)
awx_secret_key: "ChangeThisToARandomSecretKey789!"

# =============================================================================
# GITHUB CREDENTIALS (Optional)
# =============================================================================

# GitHub Personal Access Token (for private repos)
github_token: "YOUR_GITHUB_TOKEN_HERE"

# GitHub Username
github_username: "your-github-username"

# =============================================================================
# ADDITIONAL CLOUDFLARE SETTINGS
# =============================================================================

# Default SSL Mode (off, flexible, full, strict)
cloudflare_default_ssl_mode: "full"

# Default Security Level (off, essentially_off, low, medium, high, under_attack)
cloudflare_default_security_level: "medium"

# Default Caching Level (aggressive, basic, simplified)
cloudflare_default_cache_level: "aggressive"

# Enable Development Mode (true/false)
cloudflare_development_mode: false

# Minimum TLS Version (1.0, 1.1, 1.2, 1.3)
cloudflare_min_tls_version: "1.2"

# Enable IPv6 (true/false)
cloudflare_ipv6_enabled: true

# Enable WebSockets (true/false)
cloudflare_websockets_enabled: true

# Enable HTTP/3 (QUIC) (true/false)
cloudflare_http3_enabled: true

# Enable 0-RTT (true/false)
cloudflare_zero_rtt_enabled: true

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================

# Slack Webhook URL (for notifications)
slack_webhook_url: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Email for notifications
notification_email: "devops@your-company.com"

# =============================================================================
# ENVIRONMENT TAGS
# =============================================================================

# Environment (development, staging, production)
environment: "development"

# Project/Application Name
project_name: "cf-demo"

# Team/Owner
team: "devops"

# Cost Center (for billing)
cost_center: "infrastructure"

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# S3 Bucket for backups (if using S3)
backup_s3_bucket: "your-backup-bucket"

# AWS Region for backups
backup_aws_region: "us-east-1"

# Retention period (days)
backup_retention_days: 30

# =============================================================================
# NOTES
# =============================================================================
#
# 1. **Security**: Never commit this file with real credentials
# 2. **Ansible Vault**: Consider encrypting this file:
#    ansible-vault encrypt config/credentials.yml
# 3. **Environment Variables**: You can override any value with env vars:
#    export CLOUDFLARE_API_TOKEN="your-token"
# 4. **AWX Credentials**: These will be automatically created in AWX
# 5. **Token Permissions**: Ensure your Cloudflare token has all required
#    permissions for the operations you plan to perform
#
# =============================================================================
